<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_stayalert"
    tools:context=".StatisticsFragment">

    <!-- Primer LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/stay_alert_primary"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Estadisticas"
            android:textColor="@color/white_stayalert"
            android:textSize="32sp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/ricardo_img"
            android:background="@drawable/circular_image"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />


    </LinearLayout>

    <!-- Segundo LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_stayalert"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:textColor="#1E1E1E"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Ricardo Martinez" />

    </LinearLayout>

    <!-- Tercer LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_stayalert"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <!-- Para la próxima poner el botón de histórico -->
        <com.google.android.material.button.MaterialButton
            android:backgroundTint="@android:color/transparent"
            android:background="@drawable/button_circular"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Ultimo Viaje"
            android:textColor="#FF8736"
            android:textSize="16sp"
            android:padding="10dp"
            android:fontFamily="sans-serif" />


    </LinearLayout>

    <!-- Cuarta Seccion LinearLayout 4 + Scroll -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_stayalert"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/rkki7b3zxi9"
            android:textColor="#1E1E1E"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Viaje realizado a San Rafael, Mendoza\n\n21/05/2024" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:id="@+id/entriesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Aca se agregarán dinámicamente las entradas -->
            <com.google.mediapipe.examples.facelandmarker.InfoBoxView
                android:id="@+id/infoBoxView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
